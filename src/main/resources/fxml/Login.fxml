<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1104.0" stylesheets="@../styles/Login.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codetreatise.controller.LoginController">
    <children>
        <ImageView fx:id="imageViewlogin" fitHeight="425.0" fitWidth="1137.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/login-title.png" />
        </ImageView>
        <Pane fx:id="paneUsername" layoutX="374.0" layoutY="306.0" prefHeight="63.0" prefWidth="333.0">
            <ImageView fx:id="imageViewUserName" fitHeight="56.0" fitWidth="112.0" layoutX="13.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/login-pane-username-inc.png" />
            </ImageView>
            <TextField fx:id="txtUsername" layoutX="118.0" layoutY="13.0" prefHeight="36.0" prefWidth="204.0" promptText="用户名" />
        </Pane>
        <Pane fx:id="panePassword" layoutX="372.0" layoutY="384.0" prefHeight="63.0" prefWidth="333.0">
            <ImageView fx:id="imageViewPassword" fitHeight="56.0" fitWidth="112.0" layoutX="13.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/login-pane-password-inc.png" />
            </ImageView>
            <PasswordField fx:id="txtPassword" layoutX="121.0" layoutY="14.0" prefHeight="36.0" prefWidth="204.0" promptText="密码" />
        </Pane>
        <Button fx:id="btnExit" layoutX="57.0" layoutY="466.0" mnemonicParsing="false" onAction="#exit" prefHeight="138.0" prefWidth="351.0" styleClass="btnGreen" text="退 出" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" />
            </effect>
        </Button>
        <Button fx:id="btnLogin" layoutX="592.0" layoutY="466.0" mnemonicParsing="false" onAction="#login" prefHeight="138.0" prefWidth="491.0" styleClass="btnGreen" text="登  录" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" />
            </effect>
        </Button>
    </children>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</AnchorPane>
